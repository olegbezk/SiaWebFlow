<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="pricingEngine"
          class="com.sia.pizza.service.PricingEngineImpl" />

    <!--
      <lang:groovy id="pricingEngineGroovy"
          script-source="classpath:scripts/PricingEngineImpl.groovy" />
     -->

    <bean id="customerService"
          class="com.sia.pizza.service.CustomerServiceImpl" />

    <!-- Payment processing bean -->
    <bean id="paymentProcessor"
          class="com.sia.pizza.service.PaymentProcessor" />

    <bean id="orderService"
          class="com.sia.pizza.service.OrderServiceImpl" />

</beans>